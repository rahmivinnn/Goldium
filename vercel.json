{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run dev",

  "functions": {
    "api/index.js": {
      "runtime": "vercel-nodejs@18.0.0"
    }
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
